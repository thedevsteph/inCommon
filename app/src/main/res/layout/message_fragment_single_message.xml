<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/whiteBoy"
        android:layout_height="100dp">

    <ImageView
            android:id="@+id/message_fragment_profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_man"/>

    <TextView
            android:id="@+id/single_message_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="James Mohammed"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@id/message_fragment_profile_image"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/message_fragment_profile_image"
            android:textColor="@color/blackBoy"/>


    <TextView
            android:id="@+id/single_message_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What time are you coming in today?"
            android:textSize="10dp"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/message_fragment_profile_image"
            app:layout_constraintTop_toBottomOf="@id/single_message_username"
            android:layout_marginStart="12dp"
            android:textColor="@color/greyBoy"/>


    <TextView
            android:id="@+id/single_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Jun"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/message_fragment_profile_image"
            android:textColor="@color/greyBoy"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp"/>


    <android.support.constraint.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>